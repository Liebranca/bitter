# AVTOMAT GNU MAKEFILE

#   ---     ---     ---     ---     ---
# module data

FSWAT     = AVTOMAT
MKWAT     = AVTO
NOLINK    = 1

-include ../mkvars

LMODE     = 

LFLG     += 
LIBS     += 

-include ./mkavto

#   ---     ---     ---     ---     ---

.PHONY: all clean

all: | ../AVTO $(AVTO_SRCS)
	@echo "ES-AVTOMAT: files generated by $(shell hostname) on $(shell date)" > ../AVTO;

$(TRSH)/MKLOG:
	@echo "KVR_DEBUG=0x00" > $(TRSH)MKLOG

$(TRSH)/%: /.%.pl
	@echo "Regenerated $<"
	@./$<
	@touch $@

../AVTO: avtomat.pl
	@./avtomat.pl

clean:
	@rm -rf $(TRSH)/*

#   ---     ---     ---     ---     ---
