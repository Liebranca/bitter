# AVTOMAT GNU MAKEFILE

#   ---     ---     ---     ---     ---
# module data

FSWAT     = AVTOMAT
MKWAT     = AVTO
NOLINK    = 1

-include ../mkvars

LMODE     = 

LFLG     += 
LIBS     += 

#   ---     ---     ---     ---     ---

.PHONY: all clean

all: | $(TRSH)/ffr calout.h ../AVTO
	@echo "ES-AVTOMAT: files generated by $(shell hostname) on $(shell date)" > ../AVTO;

$(TRSH)/MKLOG:
	@echo "KVR_DEBUG=0x00" > $(TRSH)MKLOG

calout.h: calout.py
	@echo Regenerated calout
	@python calout.py > calout.h

$(TRSH)/ffr: ffr.pl
	@echo Regenerated ffr
	@./ffr.pl
	@touch $(TRSH)/ffr

-include $(TRSH)/ffr.pmk

../AVTO: avtomat.py
	@python avtomat.py

clean:
	@rm -rf $(TRSH)/*

#   ---     ---     ---     ---     ---
